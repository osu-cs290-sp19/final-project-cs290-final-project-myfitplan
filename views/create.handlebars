<main>
	<section class="createHeader">
 
		<h2 class="liftTitle">{{title}}</h2>
		<p class="liftDesc">{{description}}</p>
		<button type="button" id="addLift">Add Lift</button>

	</section>

	<section class="createContainer">

		<article class="lift">


			<table class="liftTable" id="lift-table">
				<tr>
					<th>Muscle</th>
					<th>Exercise Name</th>
					<th>Sets</th>
					<th>Reps</th>
					<th>Rest</th>
					<th></th>
				</tr>
				{{#each lifts}}
				<tr>
					<td contenteditable>{{muscle}}</td>
					<td contenteditable>{{liftName}}</td>
					<td contenteditable>{{sets}}</td>
					<td contenteditable>{{reps}}</td>
					<td contenteditable>{{rest}} {{unit}}</td>
					<td><input type="button" value="Delete" onclick="deleteRow(this)"/></td>
				</tr>
				{{/each}}
			</table>

		</article>

	
	</section>

	<section id="planButtons">
		<div class="saveButton"><button type="button" id="save-button">Save Plan</button></div>
		<div class="deleteButton" ><button type="button" id="delete-button">Delete Plan</button></div>
	</section>

</main>